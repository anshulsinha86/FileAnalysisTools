<Window x:Class="FileAnalysisTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="File Analysis Dashboard" 
        Height="950" 
        Width="1600"
        WindowStartupLocation="CenterScreen" 
        Background="#0F0F0F"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="BorderBrush" Value="#3F3F46"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Header Text -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Value Text -->
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4FC3F7"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Label Text -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- Link Text-->
        <Style x:Key="LinkText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4FC3F7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Clickable Card Button Style -->
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="10">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252526"/>
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E1E1E" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="🚀 File Analysis Dashboard" 
                               Foreground="#FFFFFF" 
                               FontSize="28" 
                               FontWeight="Bold"/>
                    <TextBlock x:Name="PathText" 
                               Text="No folder selected - Click 'Select Folder' to begin" 
                               Foreground="#888888" 
                               FontSize="12" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="SelectFolderBtn" 
                            Content="📁 Select Folder" 
                            Style="{StaticResource ModernButton}" 
                            Click="SelectFolder_Click" 
                            Margin="0,0,10,0"/>
                    <Button x:Name="AnalyzeBtn" 
                            Content="⚡ Start Analysis" 
                            Style="{StaticResource ModernButton}" 
                            Click="Analyze_Click" 
                            IsEnabled="False"
                            Margin="0,0,10,0"/>
                    <Button x:Name="ExportBtn" 
                            Content="💾 Export Report" 
                            Style="{StaticResource ModernButton}" 
                            Click="Export_Click" 
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Progress Panel -->
                <Border x:Name="ProgressPanel" 
                        Style="{StaticResource CardStyle}" 
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="⏳ Analyzing..." Style="{StaticResource HeaderText}" Margin="0,0,0,10"/>
                        <ProgressBar x:Name="ProgressBar" 
                                   Height="30" 
                                   Minimum="0" 
                                   Maximum="100" 
                                   Value="0"
                                   Background="#2D2D30"
                                   Foreground="#007ACC"
                                   BorderThickness="0"/>
                        <TextBlock x:Name="ProgressText" 
                                 Text="Preparing scan..." 
                                 Style="{StaticResource LabelText}" 
                                 Margin="0,10,0,0" 
                                 TextWrapping="Wrap"
                                 LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- Summary Cards - NOW CLICKABLE -->
                <Grid x:Name="SummaryGrid" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Style="{StaticResource CardButton}" Click="ShowAllFiles_Click">
                        <StackPanel>
                            <TextBlock Text="📁 Total Files" Style="{StaticResource HeaderText}"/>
                            <TextBlock x:Name="TotalFilesText" Text="0" Style="{StaticResource ValueText}"/>
                            <TextBlock x:Name="TotalSizeText" Text="0 GB" Style="{StaticResource LabelText}" Margin="0,5,0,0"/>
                            <TextBlock Text="Click to view →" Style="{StaticResource LinkText}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1" Style="{StaticResource CardButton}" Click="ShowDuplicates_Click">
                        <StackPanel>
                            <TextBlock Text="🔄 Duplicate Files" Style="{StaticResource HeaderText}"/>
                            <TextBlock x:Name="DuplicatesText" Text="0" Style="{StaticResource ValueText}"/>
                            <TextBlock x:Name="DuplicatesSizeText" Text="0 MB wasted" Style="{StaticResource LabelText}" Margin="0,5,0,0"/>
                            <TextBlock Text="Click to review →" Style="{StaticResource LinkText}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2" Style="{StaticResource CardButton}" Click="ShowEmptyFiles_Click">
                        <StackPanel>
                            <TextBlock Text="📄 Empty Files" Style="{StaticResource HeaderText}"/>
                            <TextBlock x:Name="EmptyFilesText" Text="0" Style="{StaticResource ValueText}"/>
                            <TextBlock x:Name="EmptyFilesCountText" Text="0 bytes wasted" Style="{StaticResource LabelText}" Margin="0,5,0,0"/>
                            <TextBlock Text="Click to clean →" Style="{StaticResource LinkText}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="3" Style="{StaticResource CardButton}" Click="ShowLargeFiles_Click">
                        <StackPanel>
                            <TextBlock Text="💎 Large Files" Style="{StaticResource HeaderText}"/>
                            <TextBlock x:Name="LargeFilesText" Text="0" Style="{StaticResource ValueText}"/>
                            <TextBlock x:Name="LargeFilesSizeText" Text="0 GB (>100MB)" Style="{StaticResource LabelText}" Margin="0,5,0,0"/>
                            <TextBlock Text="Click to review →" Style="{StaticResource LinkText}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Charts Section -->
                <Grid x:Name="ChartsGrid" Visibility="Collapsed" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="📊 File Size Distribution" Style="{StaticResource HeaderText}"/>
                            <lvc:CartesianChart x:Name="SizeChart" Height="300" Background="Transparent">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Foreground="#CCCCCC" ShowLabels="True"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Foreground="#CCCCCC" ShowLabels="True" LabelFormatter="{Binding YFormatter}"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="🎯 Top 8 Extensions" Style="{StaticResource HeaderText}"/>
                            <lvc:PieChart x:Name="ExtensionChart" 
                                        Height="300" 
                                        Background="Transparent" 
                                        LegendLocation="Bottom"
                                        Hoverable="True"
                                        DataTooltip="{x:Null}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Data Grid Section -->
                <Border x:Name="DataGridPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed" Margin="0,10,0,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="📋 Detailed File List" Style="{StaticResource HeaderText}" Margin="0" VerticalAlignment="Center"/>

                            <TextBox x:Name="SearchBox" 
                                   Grid.Column="1"
                                   Width="350"
                                   Height="34"
                                   Margin="20,0"
                                   Background="#2D2D30"
                                   Foreground="#FFFFFF"
                                   BorderBrush="#3F3F46"
                                   Padding="10,8"
                                   VerticalContentAlignment="Center"
                                   FontSize="13"
                                   TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="🔍 Search by name, extension, or path..." 
                                                                         Foreground="#666666" 
                                                                         FontSize="13"
                                                                         Margin="10,0,0,0"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <ComboBox x:Name="FilterCombo" 
                                        Width="220" 
                                        Height="34"
                                        Background="#2D2D30"
                                        Foreground="#FFFFFF"
                                        BorderBrush="#3F3F46"
                                        FontSize="13"
                                        SelectionChanged="Filter_Changed">
                                    <ComboBoxItem Content="All Files" IsSelected="True"/>
                                    <ComboBoxItem Content="Duplicates Only"/>
                                    <ComboBoxItem Content="Empty Files Only"/>
                                    <ComboBoxItem Content="Large Files (>100MB)"/>
                                    <ComboBoxItem Content="Recent Files (Last 7 Days)"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <DataGrid x:Name="FilesDataGrid" 
                                Height="450"
                                AutoGenerateColumns="False" 
                                Background="#1E1E1E"
                                Foreground="#FFFFFF"
                                BorderBrush="#3F3F46"
                                GridLinesVisibility="Horizontal"
                                HorizontalGridLinesBrush="#2D2D30"
                                HeadersVisibility="Column"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                AlternatingRowBackground="#252526"
                                RowBackground="#1E1E1E"
                                SelectionMode="Extended"
                                SelectionUnit="FullRow">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderBrush" Value="#3F3F46"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding Name}" Width="2*"/>
                                <DataGridTextColumn Header="Extension" Binding="{Binding Extension}" Width="*"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="*"/>
                                <DataGridTextColumn Header="Path" Binding="{Binding DirectoryName}" Width="3*"/>
                                <DataGridTextColumn Header="Modified" Binding="{Binding LastModifiedFormatted}" Width="1.5*"/>
                                <DataGridCheckBoxColumn Header="Duplicate" Binding="{Binding IsDuplicate}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock x:Name="ResultCountText" 
                                 Text="Showing 0 files" 
                                 Style="{StaticResource LabelText}" 
                                 Margin="0,10,0,0"
                                 HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>