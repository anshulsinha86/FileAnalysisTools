<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>FileAnalysisTools</RootNamespace>
    <AssemblyName>FileAnalysisTools</AssemblyName>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    
    <!-- Long path support is built-in to .NET 8! -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    
    <!-- Suppress duplicate assembly attribute warnings -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- Application Info -->
    <Version>2.0.0</Version>
    <Authors>Anshul Sinha</Authors>
    <Company>File Analysis Tools</Company>
    <Product>File Analysis Dashboard</Product>
    <Description>Advanced file analysis tool with beautiful dashboard and performance optimizations</Description>
    <Copyright>Copyright © 2024</Copyright>
    
    <!-- Standalone Deployment Settings -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishReadyToRun>true</PublishReadyToRun>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    
    <!-- Performance Optimizations -->
    <TieredCompilation>true</TieredCompilation>
    <TieredCompilationQuickJit>true</TieredCompilationQuickJit>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <!-- Modern Excel export without Office installation -->
    <PackageReference Include="EPPlus" Version="7.5.1" />
    
    <!-- Beautiful charts for dashboard -->
    <PackageReference Include="LiveCharts.Wpf" Version="0.9.7" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude build artifacts -->
    <Compile Remove="obj\**" />
    <EmbeddedResource Remove="obj\**" />
    <None Remove="obj\**" />
    <Page Remove="obj\**" />
  </ItemGroup>

</Project>